<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    android:fitsSystemWindows="true"

    android:background="#F8F9FD"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <FrameLayout
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/ic_check_square_green"
            android:layout_gravity="center">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_check_white"

                android:layout_gravity="center" />
        </FrameLayout>
        <!-- ✅ Title -->
        <TextView
            android:layout_marginTop="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Transaction Completed Successfully"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#4CAF50" />

        <!-- ✅ Description -->
        <TextView
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your payment has been processed successfully. You can now exit the parking area."
            android:textSize="14sp"
            android:gravity="center"
            android:textColor="#666666" />

        <!-- 📄 Transaction Summary Card -->
        <LinearLayout
            android:layout_marginTop="24dp"
            android:orientation="vertical"
            android:padding="12dp"
            android:elevation="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="📄 Transaction Summary"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/tvTransactionId"
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Transaction ID: "
                android:textStyle="bold"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/tvAmountPaid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Amount Paid: $12.38"
                android:textStyle="bold"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/tvPaymentMethod"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Payment Method:"
                android:textStyle="bold"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/tvDateTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date and Time: Jun 3, 2025 - 16:45 PM"
                android:textStyle="bold"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/tvVehicle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vehicle: ABC-1234"
                android:textStyle="bold"
                android:textColor="#000000" />

        </LinearLayout>

        <!-- 🔙 Back Button -->
        <Button
            android:id="@+id/btnBack"
            android:layout_marginTop="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorPrimary"
            android:textColor="@android:color/white"
            android:text="← Back" />

    </LinearLayout>
</ScrollView>
