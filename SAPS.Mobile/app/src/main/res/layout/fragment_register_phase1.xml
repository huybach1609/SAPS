<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f8f9fa"
    android:padding="20dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ†” Identity Verification"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#2c3e50"
            android:gravity="center"
            android:layout_marginBottom="10dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Upload your Identity Card for verification"
            android:textSize="14sp"
            android:textColor="#7f8c8d"
            android:gravity="center"
            android:layout_marginBottom="20dp" />

        <!-- Upload Section -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#CAF0F8"
            android:padding="20dp"
            android:layout_marginBottom="20dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ“„"
                android:textSize="40sp"
                android:textColor="#0077B6"
                android:gravity="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Upload Identity Card"
                android:textColor="#023E8A"
                android:textSize="16sp"
                android:layout_marginTop="10dp"
                android:gravity="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Take a photo or select from gallery"
                android:textSize="13sp"
                android:textColor="#0077B6"
                android:layout_marginTop="5dp"
                android:gravity="center" />

            <!-- NÃºt Take Photo -->
            <Button
                android:id="@+id/btn_take_photo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ“· Take Photo"
                android:layout_marginTop="10dp"
                android:backgroundTint="#0077B6"
                android:textColor="@android:color/white" />

            <!-- Hai nÃºt chá»n máº·t trÆ°á»›c vÃ  máº·t sau -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <Button
                    android:id="@+id/btn_pick_front"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="ðŸ–¼ï¸ Front Side"
                    android:backgroundTint="#0096C7"
                    android:textColor="@android:color/white" />

                <Space
                    android:layout_width="10dp"
                    android:layout_height="0dp"/>

                <Button
                    android:id="@+id/btn_pick_back"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="ðŸ–¼ï¸ Back Side"
                    android:backgroundTint="#00B4D8"
                    android:textColor="@android:color/white" />
            </LinearLayout>

            <!-- áº¢nh preview -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                android:gravity="center">

                <ImageView
                    android:id="@+id/preview_image_front"
                    android:layout_width="0dp"
                    android:layout_height="200dp"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    android:visibility="gone"
                    android:layout_marginEnd="5dp"
                    android:background="#e0e0e0" />

                <ImageView
                    android:id="@+id/preview_image_back"
                    android:layout_width="0dp"
                    android:layout_height="200dp"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    android:visibility="gone"
                    android:layout_marginStart="5dp"
                    android:background="#e0e0e0" />
            </LinearLayout>
        </LinearLayout>

        <!-- User Input Fields -->
        <EditText
            android:id="@+id/edit_text_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email Address"
            android:inputType="textEmailAddress"
            android:layout_marginBottom="10dp" />

        <EditText
            android:id="@+id/edit_text_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:inputType="textPassword"
            android:layout_marginBottom="10dp" />

        <EditText
            android:id="@+id/edit_text_confirm_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Confirm Password"
            android:inputType="textPassword"
            android:layout_marginBottom="15dp" />

        <!-- Password Requirements -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="âš ï¸ Password Requirements:\nâ€¢ At least 8 characters\nâ€¢ Uppercase &amp; lowercase letters\nâ€¢ Numbers &amp; symbols\nâ€¢ No spaces"
            android:textSize="12sp"
            android:textColor="#7f8c8d"
            android:background="#CAF0F8"
            android:padding="10dp"
            android:layout_marginBottom="15dp" />

        <!-- Alert -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your identity card will be used for account verification only. Data is encrypted and secure."
            android:textSize="12sp"
            android:padding="10dp"
            android:textColor="#03045E"
            android:background="#CAF0F8"
            android:layout_marginBottom="20dp" />

        <!-- Next Step Button -->
        <Button
            android:id="@+id/button_next_phase"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Next Step â†’"
            android:backgroundTint="#0077B6"
            android:textColor="@android:color/white" />
    </LinearLayout>
</ScrollView>