<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    android:layout_height="match_parent">

    <!-- AppBar chứa Header (cuộn mất) và Tabs (giữ lại) -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Light">

        <!-- Header: Cuộn mất -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            app:layout_scrollFlags="scroll|enterAlways">

            <!-- Header: Title + Add button -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:weightSum="1">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/title_my_vehicles"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:drawablePadding="8dp"
                    android:gravity="start"
                    android:textColor="#000000"
                    android:layout_weight="0.5" />

                <Button
                    android:id="@+id/btn_add_vehicle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/btn_add_vehicle"
                    android:textAllCaps="false"
                    android:layout_marginTop="8dp"
                    android:backgroundTint="#0066CC"
                    android:textColor="#FFFFFF"
                    android:layout_weight="0.5"
                    android:contentDescription="@string/btn_add_vehicle_desc" />
            </LinearLayout>

            <!-- Share Code Card -->
            <LinearLayout
                android:id="@+id/share_code_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:background="#D8F1FF"
                android:backgroundTint="#E0F4FF"
                android:backgroundTintMode="src_in"
                android:clipToOutline="true"
                android:elevation="4dp"
                android:orientation="vertical"
                android:padding="16dp"
                android:contentDescription="@string/cd_share_code_card">

                <TextView
                    android:id="@+id/label_share_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_share_code"
                    android:textColor="#0D47A1"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFFFFF"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp">

                    <TextView
                        android:id="@+id/tv_share_code"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="8dp"
                        android:gravity="center"
                        android:text="@string/example_share_code"
                        android:textColor="#BBDEFB"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:text="@string/share_code_description"
                    android:textColor="#0D47A1"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btn_copy_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:backgroundTint="#0066CC"
                    android:text="@string/btn_copy_my_share_code"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    android:contentDescription="@string/btn_copy_share_code_desc" />
            </LinearLayout>
        </LinearLayout>

        <!-- Tabs: KHÔNG CUỘN -->
        <LinearLayout
            android:id="@+id/toggleTabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="12dp"
            android:background="@android:color/transparent">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnMyVehicles"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="@string/tab_my_vehicles"
                android:background="@drawable/bg_tab_selected"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_marginEnd="6dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnSharedVehicles"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="@string/tab_shared_vehicles"
                android:background="@drawable/bg_tab_unselected"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_marginStart="6dp" />
        </LinearLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <!-- RecyclerView kéo được -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvVehicles"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:padding="16dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>
