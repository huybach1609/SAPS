<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swipeRefreshLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <!-- Single child: NestedScrollView containing all content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/bgImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/landing_image" />
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#80000000" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Header Section with gradient background -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_header_gradient"
                android:orientation="vertical">

                <!-- Profile and Notification Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="20dp">

                    <!-- Profile Image -->
                    <ImageView
                        android:id="@+id/profileImage"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/circle_background"
                        />


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvGreeting"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="?attr/textAppearanceDisplayMedium"
                            android:text="@string/home_greeting_username"
                            android:textColor="@color/md_theme_onPrimary"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvWelcome"
                            style="?attr/textAppearanceDisplayMedium"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/home_welcome_back"
                            android:textColor="@color/md_theme_onSecondary"
                            android:textSize="14sp" />

                    </LinearLayout>


                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnNotification"
                            style="?attr/materialIconButtonFilledStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/md_theme_primary"
                            app:icon="@drawable/notification_24dp"
                            app:iconTint="@color/md_theme_onPrimary"
                            app:iconSize="24dp"
                            app:cornerRadius="100dp"
                            app:rippleColor="@color/md_theme_onPrimary"
                            android:padding="8dp" />


                </LinearLayout>

                <!-- List of current sessions inside the card container -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvCurrentSessions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="7dp"
                    android:nestedScrollingEnabled="false" />


                <!-- Current Session Card Container -->
                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/parkingSessionContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/bg_card_corner"
                    android:backgroundTint="@color/md_theme_surface"
                    android:elevation="4dp"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Header Section -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <!-- Parking Icon -->
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/local_parking_24dp"
                            app:tint="@color/md_theme_tertiary"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:letterSpacing="0.1"
                            android:text="@string/home_current_session"
                            android:textColor="@color/md_theme_tertiary"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <!-- Status Indicator -->
                        <View
                            android:layout_width="8dp"
                            android:layout_height="8dp"
                            android:background="@drawable/circle_background"
                            android:backgroundTint="@color/md_theme_tertiary" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/home_session_active"
                            android:textColor="@color/md_theme_tertiary"
                            android:textSize="10sp"
                            android:textStyle="bold"
                            android:layout_marginStart="4dp" />
                    </LinearLayout>

                    <!-- Main Content Section -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_marginBottom="16dp">

                        <!-- Project Info Container -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <!-- Parking Lot Name (Made More Prominent) -->
                            <TextView
                                android:id="@+id/tvParkingLotName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/home_sample_parking_lot"
                                android:textColor="@color/md_theme_onSurface"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:layout_marginBottom="4dp" />

                            <!-- Vehicle Info -->
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:layout_marginBottom="6dp">

                                <ImageView
                                    android:layout_width="14dp"
                                    android:layout_height="14dp"
                                    android:src="@drawable/traffic_jam_24dp"
                                    app:tint="@color/md_theme_primary"
                                    android:layout_marginEnd="4dp" />

                                <TextView
                                    android:id="@+id/tvVehicle"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/home_sample_vehicle"
                                    android:textColor="@color/md_theme_primary"
                                    android:textSize="14sp"
                                    android:textStyle="bold" />
                            </LinearLayout>

                            <!-- Location with Icon -->
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="12dp"
                                    android:layout_height="12dp"
                                    android:src="@drawable/location_on_24dp"
                                    app:tint="@color/md_theme_secondary"
                                    android:layout_marginEnd="4dp" />

                                <TextView
                                    android:id="@+id/tvLocation"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:ellipsize="end"
                                    android:singleLine="true"
                                    android:text="@string/home_sample_location"
                                    android:textColor="@color/md_theme_secondary"
                                    android:textSize="13sp" />
                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>

                    <!-- Divider -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/md_theme_outlineVariant"
                        android:layout_marginBottom="12dp" />

                    <!-- Time Information Section -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="16dp">

                        <!-- Entry Time -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="14dp"
                                    android:layout_height="14dp"
                                    android:src="@drawable/timer"
                                    app:tint="@color/md_theme_secondary"
                                    android:layout_marginEnd="4dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/home_session_started"
                                    android:textColor="@color/md_theme_secondary"
                                    android:textSize="11sp"
                                    android:textStyle="bold" />
                            </LinearLayout>

                            <TextView
                                android:id="@+id/tvEntryTime"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/home_sample_entry_time"
                                android:textColor="@color/md_theme_onSurface"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:layout_marginTop="2dp" />
                        </LinearLayout>

                        <!-- Duration -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_vertical|end"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="14dp"
                                    android:layout_height="14dp"
                                    android:src="@drawable/hourglass"
                                    app:tint="@color/md_theme_secondary"
                                    android:layout_marginEnd="4dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/home_session_duration"
                                    android:textColor="@color/md_theme_secondary"
                                    android:textSize="11sp"
                                    android:textStyle="bold" />
                            </LinearLayout>

                            <TextView
                                android:id="@+id/tvDuration"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/home_sample_duration"
                                android:textColor="@color/md_theme_onSurface"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:layout_marginTop="2dp" />
                        </LinearLayout>

                    </LinearLayout>

                    <!-- Cost Information (New Addition) -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="16dp"
                        android:background="@drawable/bg_cost_highlight"
                        android:backgroundTint="@color/md_theme_primaryContainer"
                        android:padding="12dp">

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/attach_money_24dp"
                            android:layout_gravity="center_vertical"
                            app:tint="@color/md_theme_primary"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/home_current_cost"
                            android:layout_gravity="center_vertical"
                            android:textColor="@color/md_theme_primary"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/tvCurrentCost"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="@string/home_sample_cost"
                            android:textColor="@color/md_theme_primary"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <!-- Action Buttons -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <!-- Extend Button -->
<!--                        <Button-->
<!--                            android:id="@+id/btnExtendTime"-->
<!--                            style="@style/Widget.Material3.Button.OutlinedButton"-->
<!--                            android:layout_width="0dp"-->
<!--                            android:layout_height="56dp"-->
<!--                            android:layout_weight="1"-->
<!--                            android:layout_marginEnd="8dp"-->
<!--                            android:text="Extend"-->
<!--                            android:textSize="13sp"-->
<!--                            app:icon="@drawable/add_circle_24dp"-->
<!--                            app:iconSize="16dp" />-->

                        <!-- Check Out Button (Made More Prominent) -->
                        <Button
                            android:id="@+id/btnCheckOut"
                            android:layout_width="0dp"
                            android:layout_height="56dp"
                            android:layout_weight="3"
                            android:backgroundTint="@color/md_theme_tertiary"
                            android:elevation="8dp"
                            android:text="@string/home_check_out"
                            android:textColor="@color/md_theme_onTertiary"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            app:icon="@drawable/exit_to_app_24dp"
                            android:drawableTint="@color/md_theme_onTertiary"
                            app:iconSize="18dp" />
                    </LinearLayout>

                               </LinearLayout>
                <!-- No Session Message -->
                <LinearLayout
                    android:id="@+id/noSessionContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/bg_card_corner"
                    android:backgroundTint="@color/md_theme_surface"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="24dp"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginBottom="16dp"
                        android:src="@drawable/ic_car"
                        app:tint="@color/md_theme_secondary" />

                    <TextView
                        android:id="@+id/tvNoSessionMessage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/home_start_new_session"
                        android:textColor="@color/md_theme_primary"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:gravity="center"
                        android:text="@string/home_no_active_session"
                        android:textColor="@color/md_theme_secondary"
                        android:textSize="14sp" />

                </LinearLayout>

            </LinearLayout>




            <!-- Additional Content Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:orientation="vertical">

                <!-- SAPLS Title Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/home_app_name"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        android:textColor="#ffffff"
                        android:letterSpacing="0.05" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/home_app_full_name"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#ffffff"
                        android:layout_marginTop="4dp"
                        android:gravity="center" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/home_app_description"
                        android:textSize="14sp"
                        android:textColor="#ffffff"
                        android:layout_marginTop="8dp"
                        android:gravity="center"
                        android:lineSpacingExtra="2dp" />

                </LinearLayout>

                <!-- Features Grid -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="20dp">

                    <!-- First Row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <!-- AI Recognition -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginEnd="6dp"
                            android:background="@drawable/bg_card_corner"
                            android:backgroundTint="@color/md_theme_surfaceVariant"
                            android:padding="16dp"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/home_feature_ai_emoji"
                                android:textSize="24sp"
                                android:layout_marginBottom="8dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/home_feature_ai_recognition"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:textColor="@color/md_theme_onSurfaceVariant"
                                android:gravity="center" />

                        </LinearLayout>


                    </LinearLayout>

                    <!-- Second Row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <!-- Secure -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginEnd="6dp"
                            android:background="@drawable/bg_card_corner"
                            android:backgroundTint="@color/md_theme_surfaceVariant"
                            android:padding="16dp"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/home_feature_secure_emoji"
                                android:textSize="24sp"
                                android:layout_marginBottom="8dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/home_feature_secure"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:textColor="@color/md_theme_onSurfaceVariant"
                                android:gravity="center" />

                        </LinearLayout>

                        <!-- Fast -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="6dp"
                            android:background="@drawable/bg_card_corner"
                            android:backgroundTint="@color/md_theme_surfaceVariant"
                            android:padding="16dp"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/home_feature_fast_emoji"
                                android:textSize="24sp"
                                android:layout_marginBottom="8dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/home_feature_fast"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:textColor="@color/md_theme_onSurfaceVariant"
                                android:gravity="center" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <!-- Parking Lot Illustration -->
                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">


                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        </FrameLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>