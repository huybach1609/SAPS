<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:fillViewport="true"
    android:background="#F5F5F5">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:background="#F5F5F5">

        <!-- 🔰 Tiêu đề và logo nhóm -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:gravity="bottom|center_horizontal"
            android:background="@drawable/gradient_background_blue"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingBottom="8dp"
            android:fitsSystemWindows="true"
            android:clipToPadding="false"
            android:layout_marginBottom="16dp">

            <ImageView
                android:id="@+id/imgLogo"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/icon_oto"
                android:contentDescription="@string/logo_description"
                android:layout_marginEnd="12dp" />

            <TextView
                android:id="@+id/tvGroupTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_group_name"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Nội dung -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="16dp"
            android:background="#F5F5F5">

            <LinearLayout
                android:orientation="vertical"
                android:padding="12dp"
                android:layout_marginBottom="8dp"
                android:layout_margin="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/left_border_card">

                <!-- Thông tin phiên đỗ xe -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:layout_margin="8dp"
                    android:elevation="4dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="16dp"
                    android:backgroundTintMode="src_in"
                    android:backgroundTint="#D4F1F9"
                    android:clipToPadding="false"
                    android:layout_marginBottom="24dp"
                    android:background="@drawable/bg_card_corner">

                    <TextView
                        android:text="@string/label_vehicle"
                        android:textStyle="bold"
                        android:textColor="#00008B"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/tvVehicle"
                        android:text=""
                        android:textColor="#0277BD"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:text="@string/label_location"
                        android:textStyle="bold"
                        android:textColor="#00008B"
                        android:layout_marginTop="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/tvLocation"
                        android:text=""
                        android:textStyle="bold"
                        android:textColor="#0277BD"
                        android:textSize="16sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:text="@string/label_entry_time"
                        android:textStyle="bold"
                        android:textColor="#00008B"
                        android:layout_marginTop="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/tvEntryTime"
                        android:text=""
                        android:textStyle="bold"
                        android:textColor="#0277BD"
                        android:textSize="16sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:text="@string/label_duration"
                        android:textStyle="bold"
                        android:textColor="#00008B"
                        android:layout_marginTop="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/tvDuration"
                        android:text=""
                        android:textStyle="bold"
                        android:textColor="#0277BD"
                        android:textSize="16sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal">

                    <!-- Nút tròn "Check Out" -->
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnCheckOut"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:background="@drawable/button_circle_ripple"
                        android:text="@string/btn_check_out"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:elevation="8dp"
                        android:translationZ="4dp" />
                </LinearLayout>
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvParkingHistory"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="12dp" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
