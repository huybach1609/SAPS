        android:padding="8dp"
        android:layout_marginBottom="16dp">

        <ImageView
            android:id="@+id/imgLogo"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/icon_oto"
            android:contentDescription="Logo nhÃ³m"
            android:layout_marginEnd="12dp"/>

        <TextView
            android:id="@+id/tvGroupTitle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:text="SAPLS"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold"/>
    </LinearLayout>
    <!-- Noi dung -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="16dp"
        android:background="#F5F5F5">

        <LinearLayout
            android:orientation="vertical"
            android:padding="12dp"
            android:layout_marginBottom="8dp"
            android:layout_margin="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/left_border_card">
        <!-- ThÃ´ng tin phiÃªn Ä‘á»— xe -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_margin="8dp"
            android:elevation="4dp"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:backgroundTintMode="src_in"
            android:backgroundTint="#D4F1F9"
            android:clipToPadding="false"
            android:layout_marginBottom="24dp"
            android:background="@drawable/bg_card_corner">

            <TextView
                android:text="Vehicle:"
                android:textStyle="bold"
                android:textColor="#00008B"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tvVehicle"
                android:text=""
                android:textColor="#0277BD"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:text="Location:"
                android:textStyle="bold"
                android:textColor="#00008B"
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tvLocation"
                android:text=""
                android:textStyle="bold"
                android:textColor="#0277BD"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:text="Entry Time:"
                android:textStyle="bold"
                android:textColor="#00008B"
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tvEntryTime"
                android:text=""
                android:textStyle="bold"
                android:textColor="#0277BD"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:text="Duration:"
                android:textStyle="bold"
                android:textColor="#00008B"
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tvDuration"
                android:text=""
                android:textStyle="bold"
                android:textColor="#0277BD"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal">


        <!-- NÃºt trÃ²n "Check Out" -->
    <Button
        android:id="@+id/btnCheckOut"
        android:layout_width="100dp"
