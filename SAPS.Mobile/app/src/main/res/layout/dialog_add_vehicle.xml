<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:id="@+id/tvDialogTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/dialog_add_vehicle_title"
                android:textSize="24sp"
                android:fontFamily="sans-serif"
                android:textStyle="normal"
                android:textColor="@color/text_primary"
                android:gravity="center"
                android:layout_marginBottom="16dp" />

            <Button
                android:id="@+id/btnRegisterMyVehicle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/option_register_my_vehicle"
                android:textAllCaps="false"
                android:fontFamily="sans-serif"
                android:textSize="16sp"
                android:textStyle="normal"
                android:backgroundTint="@color/primary"
                android:textColor="@android:color/white"
                android:layout_marginBottom="12dp" />

            <Button
                android:id="@+id/btnReceiveFromShareCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/option_receive_from_share_code"
                android:textAllCaps="false"
                android:fontFamily="sans-serif"
                android:textSize="16sp"
                android:textStyle="normal"
                android:backgroundTint="@color/primary"
                android:textColor="@android:color/white" />

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</LinearLayout>
