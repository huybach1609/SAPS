<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f8f9fa"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Avatar + Name + Email -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <ImageView
                android:id="@+id/profile_image"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/account_circle_24"
                android:background="@drawable/circle_background"
                android:padding="16dp"
                android:scaleType="centerInside" />

            <TextView
                android:id="@+id/profile_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginTop="10dp"
                android:textColor="#2c3e50" />

            <TextView
                android:id="@+id/profile_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:textSize="14sp"
                android:textColor="#7f8c8d" />
        </LinearLayout>

        <!-- ThÃ´ng tin -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#FFFFFF"
            android:padding="16dp"
            android:elevation="4dp"
            android:layout_marginBottom="20dp"
            android:backgroundTint="#FFFFFF">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Account Information"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#2c3e50"
                android:layout_marginBottom="10dp" />

            <!-- Row 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView android:text="ID No:" style="@style/ProfileFieldTitle"/>
                    <TextView android:id="@+id/id_number" style="@style/ProfileFieldValue"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView android:text="Date of Birth:" style="@style/ProfileFieldTitle"/>
                    <TextView android:id="@+id/date_of_birth" style="@style/ProfileFieldValue"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Row 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView android:text="Sex:" style="@style/ProfileFieldTitle"/>
                    <TextView android:id="@+id/sex" style="@style/ProfileFieldValue"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView android:text="Nationality:" style="@style/ProfileFieldTitle"/>
                    <TextView android:id="@+id/nationality" style="@style/ProfileFieldValue"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Row 3 -->
            <TextView android:text="Place of Origin:" style="@style/ProfileFieldTitle"/>
            <TextView android:id="@+id/place_of_origin" style="@style/ProfileFieldValue"/>

            <TextView android:text="Place of Residence:" style="@style/ProfileFieldTitle"/>
            <TextView android:id="@+id/place_of_residence" style="@style/ProfileFieldValue"/>

            <TextView android:text="Phone:" style="@style/ProfileFieldTitle"/>
            <TextView android:id="@+id/phone" style="@style/ProfileFieldValue"/>

            <TextView android:text="Member Since:" style="@style/ProfileFieldTitle"/>
            <TextView android:id="@+id/member_since" style="@style/ProfileFieldValue"/>
        </LinearLayout>

        <!-- Buttons -->
        <Button
            android:id="@+id/btn_edit_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="âœï¸ Edit Personal Information"
            android:backgroundTint="#0077B6"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="10dp" />

        <Button
            android:id="@+id/btn_change_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ” Change Password"
            android:backgroundTint="#48CAE4"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="10dp" />

        <Button
            android:id="@+id/btn_notification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ”” Notifications"
            android:backgroundTint="#00B4D8"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="10dp" />

        <Button
            android:id="@+id/btn_logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸšª Logout"
            android:backgroundTint="#e74c3c"
            android:textColor="#FFFFFF" />
    </LinearLayout>
</ScrollView>
