<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="#F8F9FD">

    <!-- App bar with up/back -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        style="@style/Widget.MaterialComponents.Toolbar.Primary"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:backgroundTint="#0B69FF"
        app:titleTextColor="@android:color/white"
        app:navigationIcon="@drawable/ic_arrow_back"
        app:title="@string/session_details_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="?attr/actionBarSize"
        android:paddingBottom="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Header -->
            <TextView
                android:id="@+id/tvHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/session_details_heading"
                android:textColor="#0F172A"
                android:textSize="20sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tvSubHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/session_details_subheading"
                android:textColor="#6B7280"
                android:textSize="14sp"
                android:layout_marginBottom="12dp" />

            <!-- Two-column cards: Session info & Time -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12dp"
                    app:strokeColor="#E6E9EF"
                    app:strokeWidth="1dp"
                    app:cardElevation="2dp"
                    android:layout_marginEnd="8dp"
                    android:padding="12dp"
                    app:cardBackgroundColor="@android:color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/session_info_title"
                            android:textStyle="bold"
                            android:textColor="#0F172A" />

                        <TextView
                            android:id="@+id/tvLocation"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/sample_location"
                            android:textColor="#374151"
                            android:layout_marginTop="6dp" />

                        <TextView
                            android:id="@+id/tvSlot"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/sample_slot"
                            android:textColor="#374151"
                            android:layout_marginTop="4dp" />

                        <View android:layout_width="match_parent" android:layout_height="8dp" />

                        <TextView
                            android:id="@+id/tvVehicle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/sample_vehicle_plate"
                            android:textStyle="bold"
                            android:textColor="#0F172A" />

                        <TextView
                            android:id="@+id/tvVehicleModel"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/sample_vehicle_model"
                            android:textColor="#6B7280"
                            android:layout_marginTop="2dp" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12dp"
                    app:strokeColor="#E6E9EF"
                    app:strokeWidth="1dp"
                    app:cardElevation="2dp"
                    android:layout_marginStart="8dp"
                    android:padding="12dp"
                    app:cardBackgroundColor="@android:color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/time_details_title"
                            android:textStyle="bold"
                            android:textColor="#0F172A" />

                        <TextView
                            android:id="@+id/tvEntryDate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/sample_entry_date"
                            android:textColor="#374151"
                            android:layout_marginTop="6dp" />

                        <TextView
                            android:id="@+id/tvEntryTime"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/sample_entry_time"
                            android:textColor="#374151"
                            android:layout_marginTop="4dp" />

                        <View android:layout_width="match_parent" android:layout_height="8dp" />

                        <TextView
                            android:id="@+id/tvExitDate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/sample_exit_date"
                            android:textColor="#374151" />

                        <TextView
                            android:id="@+id/tvExitTime"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/sample_exit_time"
                            android:textColor="#374151"
                            android:layout_marginTop="4dp" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

            <!-- Duration -->
            <TextView
                android:id="@+id/tvDuration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/sample_duration"
                android:textColor="#0F172A"
                android:background="#E3F2FD"
                android:padding="10dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="8dp"
                android:fontFamily="sans-serif-medium"
                android:textStyle="bold" />

            <!-- Payment details card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardUseCompatPadding="true"
                app:cardBackgroundColor="@android:color/white"
                app:strokeColor="#E6E9EF"
                app:strokeWidth="1dp"
                android:layout_marginBottom="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/payment_details_title"
                        android:textStyle="bold"
                        android:textColor="#0F172A" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="@string/base_rate"
                            android:textColor="#374151" />

                        <TextView
                            android:id="@+id/tvBaseRate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/base_rate_value"
                            android:textColor="#374151" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="@string/time_charged"
                            android:textColor="#374151" />

                        <TextView
                            android:id="@+id/tvTimeCharged"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/time_charged_value"
                            android:textColor="#374151" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="@string/subtotal"
                            android:textColor="#374151" />

                        <TextView
                            android:id="@+id/tvSubtotal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/subtotal_value"
                            android:textColor="#374151" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="@string/tax"
                            android:textColor="#374151" />

                        <TextView
                            android:id="@+id/tvTax"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/tax_value"
                            android:textColor="#374151" />
                    </LinearLayout>

                    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#EEF2F7" android:layout_marginTop="12dp" android:layout_marginBottom="12dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="@string/total"
                            android:textColor="#0F172A"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvTotalAmount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/total_value"
                            android:textColor="#0B69FF"
                            android:textSize="18sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Transaction details -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardUseCompatPadding="true"
                app:cardBackgroundColor="@android:color/white"
                app:strokeColor="#E6E9EF"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/transaction_details_title"
                        android:textStyle="bold"
                        android:textColor="#0F172A" />

                    <TextView
                        android:id="@+id/tvTransactionId"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/sample_txn_id"
                        android:textColor="#374151"
                        android:layout_marginTop="8dp" />

                    <TextView
                        android:id="@+id/tvPaymentMethod"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/sample_payment_method"
                        android:layout_marginTop="4dp"
                        android:textColor="#374151" />

                    <TextView
                        android:id="@+id/tvPaymentStatus"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/sample_payment_status"
                        android:layout_marginTop="4dp"
                        android:textColor="#10B981" />

                    <TextView
                        android:id="@+id/tvPaymentDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/sample_payment_date"
                        android:layout_marginTop="4dp"
                        android:textColor="#374151" />

                    <TextView
                        android:id="@+id/tvReferenceCode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/sample_reference_code"
                        android:layout_marginTop="4dp"
                        android:textColor="#6B7280" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Actions -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="16dp"
                android:gravity="center">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnEmailReceipt"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginBottom="10dp"
                    android:text="@string/email_receipt"
                    android:textAllCaps="false"
                    app:icon="@drawable/ic_email"
                    app:iconGravity="textStart"
                    app:iconPadding="12dp"
                    app:iconTint="#0B69FF"
                    android:paddingStart="12dp"
                    app:cornerRadius="12dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnReportIssue"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="@string/report_issue"
                    android:textAllCaps="false"
                    app:cornerRadius="12dp"
                    app:icon="@drawable/ic_report"
                    app:iconGravity="textStart"
                    app:iconPadding="12dp"
                    app:iconTint="#F59E0B"
                    android:paddingStart="12dp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
