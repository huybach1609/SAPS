<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_theme_surface"
    android:padding="16dp"
    android:fitsSystemWindows="true">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="6dp"
        app:cardBackgroundColor="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Title -->
            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/vehicle_details_title"
                android:gravity="center"
                android:layout_marginBottom="18dp"
                android:textColor="@color/md_theme_onSurface"
                android:textSize="20sp"
                android:textStyle="bold" />

            <!-- Info rows -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- License Plate -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="8dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="@string/label_license_plate"
                        android:textSize="14sp"
                        android:textColor="@color/md_theme_onSurface"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvDetailLicense"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/placeholder_text"
                        android:textSize="16sp"
                        android:textColor="@color/md_theme_secondary" />
                </LinearLayout>
                <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#F1F5F9" />

                <!-- Brand -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="8dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="@string/label_brand"
                        android:textSize="14sp"
                        android:textColor="@color/md_theme_onSurface"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvDetailBrand"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/placeholder_text"
                        android:textSize="16sp"
                        android:textColor="@color/md_theme_secondary" />
                </LinearLayout>
                <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#F1F5F9" />

                <!-- Model -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="8dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="@string/label_model"
                        android:textSize="14sp"
                        android:textColor="@color/md_theme_onSurface"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvDetailModel"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/placeholder_text"
                        android:textSize="16sp"
                        android:textColor="@color/md_theme_secondary" />
                </LinearLayout>
                <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#F1F5F9" />

                <!-- Color -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="8dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="@string/label_color"
                        android:textSize="14sp"
                        android:textColor="@color/md_theme_onSurface"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvDetailColor"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/placeholder_text"
                        android:textSize="16sp"
                        android:textColor="@color/md_theme_secondary" />
                </LinearLayout>
                <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#F1F5F9" />

                <!-- Sharing Status -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="8dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="@string/label_sharing_status"
                        android:textSize="14sp"
                        android:textColor="@color/md_theme_onSurface"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvDetailStatus"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/placeholder_text"
                        android:textSize="16sp"
                        android:textColor="@color/md_theme_secondary" />
                </LinearLayout>
            </LinearLayout>

            <!-- Action button -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="20dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnCheckout"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_marginEnd="8dp"
                    android:text="@string/button_checkout"
                    android:textAllCaps="false"
                    android:textSize="16sp"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    app:cornerRadius="12dp"
                    app:icon="@drawable/ic_checkout"
                    app:iconGravity="textStart"
                    app:iconPadding="12dp"
                    app:iconTint="@color/md_theme_onPrimary"
                    android:backgroundTint="@color/md_theme_primary"
                    android:textColor="@color/md_theme_onPrimary" />
            </LinearLayout>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</ScrollView>
