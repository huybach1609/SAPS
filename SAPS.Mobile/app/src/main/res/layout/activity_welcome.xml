<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_theme_background"
    android:padding="24dp">


    <!-- Welcome text section -->

    <ImageView
        android:id="@+id/welcomeIllustration"
        android:layout_width="346dp"
        android:layout_height="230dp"
        android:layout_margin="32dp"
        android:layout_marginTop="36dp"
        android:contentDescription="Welcome illustration"
        android:scaleType="centerInside"
        android:src="@drawable/welcomlog"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/textSection"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/buttonSection"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/welcomeIllustration">

        <TextView
            android:id="@+id/textWelcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:text="@string/welcome_to"
            android:textColor="#6B7280"
            android:textSize="24sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/textAppName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="sans-serif"
            android:text="@string/app_name"
            android:textSize="32sp"
            android:textStyle="bold" />

<!--        <TextView-->
<!--            android:id="@+id/textDescription"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_marginTop="16dp"-->
<!--            android:lineSpacingExtra="2dp"-->
<!--            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua."-->
<!--            android:textAlignment="center"-->
<!--            android:textColor="#9CA3AF"-->
<!--            android:textSize="14sp"-->
<!--            app:layout_constraintWidth_percent="0.85" />-->

    </LinearLayout>

    <!-- Buttons section -->
    <LinearLayout
        android:id="@+id/buttonSection"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            style="@style/Widget.Material3.Button.Icon"
            android:id="@+id/loginButton"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginBottom="5dp"
            android:text="@string/common_signin_button_text"
            android:textColor="@color/md_theme_onPrimary"
            android:backgroundTint="@color/md_theme_primary"
            android:textSize="16sp"
            android:textStyle="bold"
            />

        <Button
            style="@style/Widget.Material3.Button.ElevatedButton.Icon"
            android:id="@+id/registerButton"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="@string/registernewaccount"
            android:backgroundTint="@color/md_theme_background"
            android:textColor="@color/md_theme_onBackground"
            android:textSize="16sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>