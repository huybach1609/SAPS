<!--            android:orientation="horizontal"-->
<!--            android:gravity="center_vertical">-->
<!--            <TextView-->
<!--                android:id="@+id/tv_title"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="match_parent"-->
<!--                android:text="@string/title_shared_vehicle_access"-->
<!--                android:gravity="center"-->
<!--                android:textSize="26sp"-->
<!--                android:textStyle="bold"-->
<!--                android:textColor="@color/md_theme_onSurface"-->
<!--                android:paddingStart="8dp" />-->
<!--        </LinearLayout>-->

        <!-- Subtitle -->
<!--        <TextView-->
<!--            android:id="@+id/tvSubtitle"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:text="@string/share_vehicle_access_subheader"-->
<!--            android:textSize="14sp"-->
<!--            android:textColor="@color/md_theme_secondary"-->
<!--            android:layout_marginTop="8dp" />-->
        <!-- Share Code Input Section -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardShareCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            android:layout_marginTop="12dp"
            app:cardBackgroundColor="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tvEnterShareCodeTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Enter User's Share Code"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@color/md_theme_onSurface" />

                <TextView
                    android:id="@+id/tvEnterShareCodeSubtitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ask the person for their personal share code, then enter it below to grant them access."
                    android:textSize="13sp"
                    android:textColor="@color/md_theme_secondary"
                    android:layout_marginTop="6dp" />

                <!-- Input row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="12dp"
                    android:gravity="center_vertical">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilShareCode"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        app:boxStrokeColor="@color/md_theme_primary"
                        app:boxBackgroundMode="outline"
                        app:hintEnabled="true"
                        android:hint="User's Share Code">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etShareCode"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:minHeight="48dp"
                            android:inputType="text"
                            android:text="USER-SARAH2024"
                            android:textColor="@color/md_theme_primary"
                            android:paddingStart="8dp" />

                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnFindUser"
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:layout_marginStart="8dp"
                        android:contentDescription="@string/cd_find_user"
                        app:icon="@drawable/ic_search"
                        app:iconSize="24dp"
                        app:cornerRadius="12dp"
                        app:iconTint="@android:color/white"
                        android:backgroundTint="@color/md_theme_primary"
                        style="@style/Widget.MaterialComponents.Button.Icon" />


                </LinearLayout>

                <TextView
                    android:id="@+id/tvShareCodeNote"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Each user has their own unique share code"
                    android:textSize="12sp"
                    android:textColor="@color/md_theme_secondary"
                    android:layout_marginTop="8dp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Found user preview (hidden until found) -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardFoundUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@android:color/white"
            android:layout_marginTop="12dp"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_person"
                    android:contentDescription="User avatar"
                    app:tint="@color/md_theme_primary" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="12dp">

                    <TextView
                        android:id="@+id/tvFoundUserName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sarah Nguyen"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="@color/md_theme_primary" />

                    <TextView
                        android:id="@+id/tvFoundUserCode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="USER-SARAH2024"
                        android:textSize="13sp"
                        android:textColor="@color/md_theme_secondary" />
                </LinearLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnGrantAccess"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Grant Access"
                    android:textAllCaps="false"
                    android:fontFamily="sans-serif-medium"
                    android:textSize="14sp"
                    app:cornerRadius="8dp"
                    android:backgroundTint="@color/md_theme_primary"
                    android:textColor="@android:color/white" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- How it works (help) -->
        <TextView
            android:id="@+id/tvHowTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="How Vehicle Sharing Works"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/md_theme_onSurface"
            android:layout_marginTop="16dp" />

        <!-- Bottom spacing -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:orientation="vertical"
            android:padding="12dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="1. Ask the person for their personal share code (e.g., USER-SARAH2024)"
                android:textColor="@color/md_theme_secondary"
                android:textSize="13sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="2. Enter their code to see their profile"
                android:textColor="@color/md_theme_secondary"
                android:textSize="13sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="3. Confirm to grant them access to your vehicle"
                android:textColor="@color/md_theme_secondary"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tvNote"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Note: Each vehicle can only be shared with one person at a time."
                android:textColor="@color/md_theme_secondary"
                android:textSize="12sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="24dp" />

    </LinearLayout>
</ScrollView>
