<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/md_theme_surface"
    android:fitsSystemWindows="true">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/topAppBar"
            style="@style/Widget.Material3.Toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:backgroundTint="?attr/colorSurface"
            app:titleTextColor="?attr/colorOnSurface"
            app:navigationIconTint="?attr/colorOnSurface"
            app:layout_scrollFlags="scroll|enterAlways"
            app:navigationIcon="@drawable/ic_arrow_back"
            app:title="@string/share_vehicle_access_activity_actionbar_title"
            />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <!-- Search Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@color/md_theme_surface">

            <!-- Search Input -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="24dp"
                app:cardElevation="0dp"
                app:strokeWidth="1dp"
                app:strokeColor="@color/md_theme_outline"
                app:cardBackgroundColor="@color/md_theme_surfaceVariant">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingStart="16dp"
                    android:paddingEnd="8dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_search"
                        app:tint="@color/md_theme_onSurfaceVariant"
                        android:contentDescription="Search icon" />

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etSearchShareCode"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent"
                        android:hint="USER-CODE25" android:textColorHint="@color/md_theme_onSurfaceVariant"
                        android:textColor="@color/md_theme_onSurface"
                        android:textSize="16sp"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:inputType="text"
                        android:imeOptions="actionSearch"
                        android:maxLines="1" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnClearSearch"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:insetLeft="0dp"
                        android:insetTop="0dp"
                        android:insetRight="0dp"
                        android:insetBottom="0dp"
                        app:icon="@drawable/ic_close"
                        app:iconSize="20dp"
                        app:iconTint="@color/md_theme_onSurfaceVariant"
                        style="@style/Widget.Material3.Button.TextButton"
                        android:visibility="gone" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Search Instructions -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:paddingStart="4dp"
                android:text="@string/share_vehicle_access_activity_search_note"
                android:textColor="@color/md_theme_secondary"
                android:textSize="13sp" />

        </LinearLayout>



        <!-- Search Results / List -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvSearchResults"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/md_theme_background"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:clipToPadding="false"
            android:visibility="gone" />

        <!-- Empty State -->
        <LinearLayout
            android:id="@+id/llEmptyState"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="32dp"
            android:visibility="gone">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_search"
                app:tint="@color/md_theme_outline"
                android:layout_marginBottom="16dp"
                android:contentDescription="No results" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/share_vehicle_access_search_not_found_search"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/md_theme_onSurface"
                android:gravity="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/share_vehicle_access_search_not_found_search_subtitle"
                android:textSize="14sp"
                android:textColor="@color/md_theme_secondary"
                android:layout_marginTop="8dp"
                android:gravity="center" />

        </LinearLayout>

        <!-- How it works section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@color/md_theme_surface">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="How Vehicle Sharing Works"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/md_theme_onPrimaryContainer"
                android:layout_marginBottom="12dp" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="1dp"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:backgroundTint="@color/md_theme_primaryContainer">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="1. Ask the person for their personal share code (e.g., USER-SARAH2024)"
                        android:textColor="@color/md_theme_onPrimaryContainer"
                        android:textSize="14sp"
                        android:layout_marginBottom="8dp"
                        android:drawablePadding="8dp"
                        app:drawableStartCompat="@drawable/circle_indicator"
                        app:drawableTint="@color/md_theme_primary" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="2. Enter their code to see their profile"
                        android:textColor="@color/md_theme_onPrimaryContainer"
                        android:textSize="14sp"
                        android:layout_marginBottom="8dp"
                        android:drawablePadding="8dp"
                        app:drawableStartCompat="@drawable/circle_indicator"
                        app:drawableTint="@color/md_theme_primary" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="3. Confirm to grant them access to your vehicle"
                        android:textColor="@color/md_theme_onPrimaryContainer"
                        android:textSize="14sp"
                        android:drawablePadding="8dp"
                        app:drawableStartCompat="@drawable/circle_indicator"
                        app:drawableTint="@color/md_theme_primary" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Warning/Note Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="1dp"
                app:strokeWidth="1dp"
                app:strokeColor="@color/md_theme_error"
                app:cardBackgroundColor="#FFF8F5"
                android:layout_marginTop="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/error_24dp"
                            app:tint="@color/md_theme_error"
                            android:contentDescription="Warning" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Important Note"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/md_theme_error"
                            android:layout_marginStart="8dp" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Each vehicle can only be shared with one person at a time."
                        android:textColor="@color/md_theme_onSurface"
                        android:textSize="13sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Each user has their own unique share code"
                        android:textColor="@color/md_theme_secondary"
                        android:textSize="12sp"
                        android:layout_marginTop="4dp" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Additional Safety Tips -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="1dp"
                app:strokeWidth="1dp"
                app:strokeColor="@color/md_theme_primary"
                app:cardBackgroundColor="#F0F8FF"
                android:layout_marginTop="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/exclamation_24dp"
                            app:tint="@color/md_theme_primary"
                            android:contentDescription="Security tip" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Safety Tips"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/md_theme_primary"
                            android:layout_marginStart="8dp" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="• Only share with people you trust\n• Verify the person's identity before granting access\n• You can revoke access anytime from settings"
                        android:textColor="@color/md_theme_onSurface"
                        android:textSize="13sp"
                        android:lineSpacingMultiplier="1.2" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </LinearLayout>

    </androidx.core.widget.NestedScrollView>
    <!-- Loading Overlay -->
    <LinearLayout
        android:id="@+id/llLoadingOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:background="#80FFFFFF"
        android:visibility="gone"
        android:clickable="true"
        android:focusable="true">

        <ProgressBar
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:indeterminateTint="@color/md_theme_primary" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/md_theme_onSurface"
            android:layout_marginTop="16dp" />

    </LinearLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>