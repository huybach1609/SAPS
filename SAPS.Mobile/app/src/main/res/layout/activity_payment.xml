<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    android:padding="16dp"
    android:background="#F8F9FD">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvPaymentTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ’³ Payment Details"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/tvBankName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bank Name: Vietcombank"
            android:layout_marginTop="4dp"
            android:textColor="#444444" />

        <TextView
            android:id="@+id/tvAccountNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Account Number: 0123456789"
            android:layout_marginTop="2dp"
            android:textColor="#444444" />

        <TextView
            android:id="@+id/tvAccountName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Account Name: SAPLS Parking System"
            android:layout_marginTop="2dp"
            android:textColor="#444444" />

        <TextView
            android:id="@+id/tvAmountToPay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Amount to Pay: $12.38"
            android:layout_marginTop="2dp"
            android:textColor="#007BFF"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvReferenceCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reference Code: PARK-ABC1234-060325"
            android:layout_marginTop="2dp"
            android:textColor="#444444" />



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Scan QR Code to pay:"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="8dp" />

        <ImageView
            android:id="@+id/imgQrCode"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:contentDescription="QR Code" />
        <Button
            android:id="@+id/btnFinish"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Finish"
            android:backgroundTint="#007BFF"
            android:textColor="#FFFFFF" />
    </LinearLayout>
</ScrollView>
