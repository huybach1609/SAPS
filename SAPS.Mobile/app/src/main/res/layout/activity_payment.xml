<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FD"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header / Title -->
        <TextView
            android:id="@+id/tvHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thanh toán"
            android:textSize="20sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:textColor="#111827"
            android:paddingBottom="12dp" />

        <!-- Payment Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardPayment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"
            app:strokeWidth="1dp"
            app:strokeColor="#E6E9EF"
            app:cardUseCompatPadding="true"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Row: Title + small hint -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tvPaymentTitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Chi tiết thanh toán"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#0F172A" />

                    <TextView
                        android:id="@+id/tvSmallHint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Gửi đúng mã tham chiếu"
                        android:textSize="12sp"
                        android:textColor="#6B7280" />
                </LinearLayout>

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="12dp" />

                <!-- Amount row (nổi bật) -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tvAmountLabel"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Số tiền"
                        android:textSize="14sp"
                        android:textColor="#374151" />

                    <TextView
                        android:id="@+id/tvAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$12.38"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#0B69FF" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tvAmountNote"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Vui lòng chuyển đúng số tiền để tự động đối soát"
                    android:textSize="12sp"
                    android:textColor="#6B7280"
                    android:layout_marginTop="6dp" />

                <!-- Thin divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#EEF2F7"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp" />

                <!-- Info rows: bank, account number, account name, ref code -->
                <!-- Each row has icon, text, and a copy button on right -->

                <!-- Bank -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp">

                    <ImageView
                        android:id="@+id/ivBankIcon"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/ic_bank"
                        android:contentDescription="Ngân hàng" />

                    <TextView
                        android:id="@+id/tvBankName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Vietcombank"
                        android:textSize="14sp"
                        android:textColor="#111827"
                        android:layout_marginStart="12dp" />

                    <ImageButton
                        android:id="@+id/btnCopyBank"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:contentDescription="Sao chép tên ngân hàng"
                        android:padding="8dp"
                        android:src="@drawable/ic_copy"
                        />
                </LinearLayout>

                <!-- Account number -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp">

                    <ImageView
                        android:id="@+id/ivAccountIcon"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/ic_account"
                        android:contentDescription="Số tài khoản" />

                    <TextView
                        android:id="@+id/tvAccountNumber"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="0123456789"
                        android:textSize="14sp"
                        android:textColor="#111827"
                        android:layout_marginStart="12dp" />

                    <ImageButton
                        android:id="@+id/btnCopyAccount"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_copy"
                        android:contentDescription="Sao chép số tài khoản"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:padding="8dp" />
                </LinearLayout>

                <!-- Account holder name -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp">

                    <ImageView
                        android:id="@+id/ivPersonIcon"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/ic_person"
                        android:contentDescription="Tên chủ tài khoản" />

                    <TextView
                        android:id="@+id/tvAccountName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="SAPLS Parking System"
                        android:textSize="14sp"
                        android:textColor="#111827"
                        android:layout_marginStart="12dp" />

                    <ImageButton
                        android:id="@+id/btnCopyName"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_copy"
                        android:contentDescription="Sao chép tên chủ tài khoản"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:padding="8dp" />
                </LinearLayout>

                <!-- Reference code (màu trung tính) -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp">

                    <ImageView
                        android:id="@+id/ivRefIcon"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/ic_tag"
                        android:contentDescription="Mã tham chiếu" />

                    <TextView
                        android:id="@+id/tvReferenceCode"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="PARK-ABC1234-060325"
                        android:textSize="13sp"
                        android:textColor="#6B7280"
                        android:layout_marginStart="12dp" />

                    <ImageButton
                        android:id="@+id/btnCopyRef"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_copy"
                        android:contentDescription="Sao chép mã tham chiếu"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:padding="8dp" />
                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- QR Card (centered) -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardQr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardUseCompatPadding="true"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/tvQrTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quét QR để thanh toán"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="#0F172A"
                    android:layout_marginBottom="12dp" />

                <ImageView
                    android:id="@+id/imgQrCode"
                    android:layout_width="220dp"
                    android:layout_height="220dp"
                    android:contentDescription="QR Code"
                    android:src="@drawable/ic_qr"
                    android:scaleType="centerInside" />

                <TextView
                    android:id="@+id/tvQrHint"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mở app ngân hàng, chọn chức năng quét QR và quét mã trên đây."
                    android:textSize="12sp"
                    android:textColor="#6B7280"
                    android:textAlignment="center"
                    android:layout_marginTop="10dp" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Action buttons: Tôi đã chuyển (primary) + Báo lỗi (ghost) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnIHavePaid"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Xác nhận thanh toán"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:fontFamily="sans-serif-medium"
                app:cornerRadius="10dp"
                android:layout_marginBottom="10dp"
                app:iconGravity="textStart"
                app:iconPadding="8dp"
                app:icon="@drawable/ic_check_circle" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnReportIssue"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Báo lỗi thanh toán"
                android:textAllCaps="false"
                android:textSize="14sp"
                android:fontFamily="sans-serif"
                app:cornerRadius="10dp" />
        </LinearLayout>

        <!-- Small footer note -->
        <TextView
            android:id="@+id/tvFooterNote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lưu ý: Giao dịch qua ngân hàng có thể mất 1–10 phút để xử lý tự động."
            android:textSize="12sp"
            android:textColor="#9CA3AF"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="24dp" />

    </LinearLayout>
</ScrollView>
