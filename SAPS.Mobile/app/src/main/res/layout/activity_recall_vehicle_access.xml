<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scroll_recall_vehicle"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:padding="16dp"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Top bar -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_shared"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@android:color/transparent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageButton
                    android:id="@+id/btn_back"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_arrow_back"
                    android:contentDescription="@string/cd_back"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    app:tint="@color/primary"
                    android:padding="8dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/back"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary"
                    android:paddingStart="8dp" />

                <ImageButton
                    android:id="@+id/btn_more"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_list"
                    android:contentDescription="@string/cd_share"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    app:tint="@color/primary"
                    android:padding="8dp" />
            </LinearLayout>
        </androidx.appcompat.widget.Toolbar>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/title_recall_access"
                android:gravity="center"
                android:textSize="26sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:paddingStart="8dp" />
        </LinearLayout>

        <!-- Subtitle -->
        <TextView
            android:id="@+id/tv_subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/sub_recall_access"
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            android:layout_marginTop="8dp" />

        <!-- Vehicle Information -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_vehicle_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tv_vehicle_section_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/section_vehicle_info"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary" />

                <TextView
                    android:id="@+id/tv_license_plate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/license_plate_label"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/text_secondary" />

                <TextView
                    android:id="@+id/tv_model"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/model_label"
                    android:layout_marginTop="4dp"
                    android:textColor="@color/text_secondary" />

                <TextView
                    android:id="@+id/tv_color"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/color_label"
                    android:layout_marginTop="4dp"
                    android:textColor="@color/text_secondary" />

                <TextView
                    android:id="@+id/tv_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/status_shared_with"
                    android:layout_marginTop="4dp"
                    android:textColor="@color/text_secondary" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Current User Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_current_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tv_current_user_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/section_current_user"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary" />

                <TextView
                    android:id="@+id/tv_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/current_user_name"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/text_secondary" />

                <TextView
                    android:id="@+id/tv_user_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/current_user_code"
                    android:layout_marginTop="4dp"
                    android:textColor="@color/text_secondary" />

                <TextView
                    android:id="@+id/tv_access_granted_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/current_user_granted_date"
                    android:layout_marginTop="4dp"
                    android:textColor="@color/text_secondary" />

                <TextView
                    android:id="@+id/tv_access_duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/current_user_duration"
                    android:layout_marginTop="4dp"
                    android:textColor="@color/text_secondary" />

                <TextView
                    android:id="@+id/tv_active_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/current_user_active"
                    android:layout_marginTop="4dp"
                    android:textColor="@color/success" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Owner note -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_note"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tv_note_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/section_note"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary" />

                <TextView
                    android:id="@+id/tv_owner_note"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/owner_note_text_recall"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/text_secondary"
                    android:textStyle="italic" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Warning -->
        <TextView
            android:id="@+id/tv_recall_warning"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/recall_warning"
            android:textColor="@color/warning"
            android:layout_marginTop="12dp" />

        <!-- Action button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_recall_access"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="@string/btn_recall_access"
            android:textAllCaps="false"
            android:backgroundTint="@color/danger"
            android:textColor="@android:color/white"
            app:cornerRadius="10dp"
            android:layout_marginTop="12dp" />

        <View android:layout_width="match_parent" android:layout_height="24dp" />
    </LinearLayout>
</ScrollView>
