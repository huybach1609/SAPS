<!--                app:iconTint="?attr/colorOnSurfaceVariant"-->
<!--                app:backgroundTint="?attr/colorSurfaceVariant"-->
<!--                android:contentDescription="Share vehicle" />-->

        </LinearLayout>

        <!-- Status Chips -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:gravity="start">

<!--            <com.google.android.material.chip.Chip-->
<!--                android:id="@+id/chipStatus"-->
<!--                style="@style/Widget.Material3.Chip.Filter"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:text="Active"-->
<!--                android:textColor="?attr/colorOnPrimaryContainer"-->
<!--                app:chipBackgroundColor="?attr/colorPrimaryContainer"-->
<!--                app:chipCornerRadius="8dp"-->
<!--                android:textSize="12sp"-->
<!--                android:clickable="false"-->
<!--                android:checkable="false" />-->

            <com.google.android.material.chip.Chip
                android:id="@+id/chipSharingStatus"
                style="@style/Widget.Material3.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Available"
                android:textColor="?attr/colorOnSecondaryContainer"
                app:chipBackgroundColor="?attr/colorSecondaryContainer"
                app:chipCornerRadius="8dp"
                android:textSize="12sp"
                android:clickable="false"
                android:checkable="false" />

        </LinearLayout>

        <!-- Details Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp">

            <!-- Owner Name -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_person"
                    app:tint="?attr/colorOnSurfaceVariant"
                    android:contentDescription="Owner icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/item_vehicle_invitation_label_owner"
                    android:textAppearance="?attr/textAppearanceBodySmall"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:id="@+id/tvOwnerName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAppearance="?attr/textAppearanceBodyMedium"
                    android:textColor="?attr/colorOnSurface"
                    android:gravity="end"
                    tools:text="Tran Thi Binh" />

            </LinearLayout>

            <!-- Color -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/palette_24dp"
                    app:tint="?attr/colorOnSurfaceVariant"
                    android:contentDescription="Color icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/item_vehicle_invitation_label_color"
                    android:textAppearance="?attr/textAppearanceBodySmall"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:id="@+id/tvColor"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAppearance="?attr/textAppearanceBodyMedium"
                    android:textColor="?attr/colorOnSurface"
                    android:gravity="end"
                    tools:text="Gold" />

            </LinearLayout>

            <!-- Registration Date -->
