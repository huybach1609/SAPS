<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    android:background="#F8F9FD"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <!-- Failed icon -->
        <ImageView
            android:id="@+id/img_failed"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_failed"
            android:contentDescription="Failed"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="16dp" />

        <!-- Transaction Failed title -->
        <TextView
            android:id="@+id/tv_failed_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Transaction Failed"
            android:textColor="#D32F2F"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp" />

        <!-- General message -->
        <TextView
            android:id="@+id/tv_failed_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="We were unable to process your payment. Please try again or contact support for assistance."
            android:textColor="#666666"
            android:gravity="center"
            android:lineSpacingExtra="2dp"
            android:layout_marginBottom="24dp" />

        <!-- Error details -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFF0F0"
            android:orientation="vertical"
            android:padding="12dp"
            android:layout_marginBottom="24dp"
            android:elevation="2dp">

            <TextView
                android:id="@+id/tv_error_details_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Error Details:"
                android:textColor="#B71C1C"
                android:textStyle="bold"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_error_details_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Payment timeout - Transaction not completed within the required time frame. Please ensure your bank transfer is completed and try again."
                android:textColor="#B71C1C"
                android:textSize="14sp"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <!-- Buttons -->
        <Button
            android:id="@+id/btn_try_again"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Try Again"
            android:backgroundTint="#03A9F4"
            android:textColor="@android:color/white"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/btnBack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Back"
            android:backgroundTint="#9E9E9E"
            android:textColor="@android:color/white"
             />

    </LinearLayout>

</ScrollView>
