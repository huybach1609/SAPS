<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginEnd="5dp"
    android:background="@drawable/bg_card_corner"
    android:backgroundTint="@color/md_theme_secondaryContainer"
    android:orientation="vertical"
    android:padding="10dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvLicensePlate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/license_plate_bg"
            android:elevation="2dp"
            android:fontFamily="monospace"
            android:letterSpacing="0.1"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"
            android:text="ABC-1234"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"
            android:gravity="center_vertical|end">


            <ImageView
               android:id="@+id/img_dot"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@drawable/circle_background"
                app:tint="@color/md_theme_onSecondaryContainer"
                android:layout_marginRight="5dp"/>

            <TextView
                android:textColor="@color/md_theme_onSecondaryContainer"
                android:id="@+id/tvSharingStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:text="Owner:"
                android:textAlignment="textEnd"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="5dp">

        <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:src="@drawable/ic_car"
            app:tint="@color/md_theme_onSecondaryContainer"
            android:layout_marginRight="5dp"
            />

        <TextView
            android:id="@+id/tvMakeModelYear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Toyota Camry - 2020"
            android:layout_marginRight="5dp"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="|"
            android:textSize="12sp"
            android:layout_marginRight="5dp"
            tools:ignore="HardcodedText" />
        <TextView
            android:id="@+id/tvColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="White"
            android:textSize="12sp" />
    </LinearLayout>
</LinearLayout>
