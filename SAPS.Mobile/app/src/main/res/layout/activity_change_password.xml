<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#f8f9fa" android:fillViewport="true">

    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
        android:orientation="vertical" android:gravity="center" android:padding="24dp"
        android:layout_gravity="center_vertical">

        <!-- Header Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="32dp">

            <Button
                android:id="@+id/btn_back"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:text="←"
                android:textSize="18sp"
                android:textStyle="bold"
                android:background="@drawable/circle_background"
                android:backgroundTint="#E0F7FA"
                android:textColor="#0077B6"
                android:elevation="4dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="🔐 Change Password"
                android:textSize="24sp"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="#2c3e50"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="64dp" />

        </LinearLayout>

        <!-- Input Fields -->
        <EditText
            android:id="@+id/edt_current"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Current Password"
            android:inputType="textPassword"
            android:layout_marginTop="16dp"
            android:background="@android:drawable/editbox_background"
            android:padding="16dp"
            android:layout_marginBottom="12dp"
            android:elevation="4dp" />



        <EditText
            android:id="@+id/edt_new"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="New Password"
            android:inputType="textPassword"
            android:layout_marginTop="12dp"
            android:background="@android:drawable/editbox_background"
            android:padding="16dp"
            android:elevation="4dp" />

        <EditText
            android:id="@+id/edt_confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Confirm New Password"
            android:inputType="textPassword"
            android:layout_marginTop="12dp"
            android:background="@android:drawable/editbox_background"
            android:padding="16dp"
            android:elevation="4dp" />

        <!-- Password Note -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Password Requirements:\n• At least 8 characters\n• Include uppercase and lowercase letters\n• Include numbers and symbols\n• No spaces allowed"
            android:textSize="15dp"
            android:background="#CAF0F8"
            android:layout_marginTop="16dp"
            android:textColor="#0077B6" />

        <!-- Button -->
        <Button
            android:id="@+id/btn_change"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="✅ Update Password"
            android:layout_marginTop="16dp"
            android:backgroundTint="#27ae60"
            android:textColor="@android:color/white"
            android:padding="16dp"
            android:elevation="6dp" />

    </LinearLayout>
</ScrollView>
