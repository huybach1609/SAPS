<rxui:ReactiveUserControl xmlns="https://github.com/avaloniaui"
						  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
						  xmlns:rxui="http://reactiveui.net"
						  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
						  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                          xmlns:vm="using:SAPLDesktopApp.ViewModels"
						  xmlns:resources="using:SAPLDesktopApp.Resources"
						  xmlns:controls="using:SAPLDesktopApp.Controls"
						  mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
						  x:DataType="vm:IncidenceReportsViewModel"
						  x:Class="SAPLDesktopApp.Views.IncidenceReportsView">

	<rxui:ReactiveUserControl.Styles>
		 <!--Header Style--> 
		<Style Selector="Border.table-header">
			<Setter Property="Background" Value="{StaticResource PrimaryDarkBrush}"/>
			<Setter Property="Padding" Value="{StaticResource PaddingLarge}"/>
		</Style>

		 <!--Header Text Style--> 
		<Style Selector="TextBlock.header-text">
			<Setter Property="Foreground" Value="{StaticResource TextLightBrush}"/>
			<Setter Property="FontWeight" Value="SemiBold"/>
			<Setter Property="FontSize" Value="{StaticResource FontSizeMedium}"/>
			<Setter Property="VerticalAlignment" Value="Center"/>
		</Style>

		 <!--Row Style--> 
		<Style Selector="Border.table-row">
			<Setter Property="Background" Value="{StaticResource NeutralBackgroundBrush}"/>
			<Setter Property="Padding" Value="{StaticResource PaddingLarge}"/>
			<Setter Property="BorderBrush" Value="{StaticResource NeutralBorderBrush}"/>
			<Setter Property="BorderThickness" Value="{StaticResource BorderThicknessBottomOnly}"/>
		</Style>

		 <!--Alternating Row Style--> 
		<Style Selector="Border.table-row:nth-child(even)">
			<Setter Property="Background" Value="{StaticResource NeutralLightBrush}"/>
		</Style>

		 <!--Row Hover Style--> 
		<Style Selector="Border.table-row:pointerover">
			<Setter Property="Background" Value="{StaticResource PrimaryLightestBrush}"/>
		</Style>

		 <!--Cell Text Style--> 
		<Style Selector="TextBlock.cell-text">
			<Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
			<Setter Property="FontSize" Value="{StaticResource FontSizeMedium}"/>
			<Setter Property="VerticalAlignment" Value="Center"/>
			<Setter Property="TextTrimming" Value="CharacterEllipsis"/>
		</Style>

		 <!--Incident ID Style--> 
		<Style Selector="TextBlock.incident-id">
			<Setter Property="FontWeight" Value="SemiBold"/>
			<Setter Property="Foreground" Value="{StaticResource PrimaryDarkBrush}"/>
		</Style>

		 <!--Incident Type Style--> 
		<Style Selector="TextBlock.incident-type">
			<Setter Property="FontWeight" Value="SemiBold"/>
			<Setter Property="Foreground" Value="{StaticResource PrimaryMediumBrush}"/>
		</Style>

		 <!--Description Style--> 
		<Style Selector="TextBlock.incident-description">
			<Setter Property="TextTrimming" Value="CharacterEllipsis"/>
			<Setter Property="ToolTip.Tip" Value="{x:Static resources:TextResource.IncidentDescriptionTooltip}"/>
		</Style>

		 <!--Date/Time Style - Professional and Consistent--> 
		<Style Selector="TextBlock.incident-date">
			<Setter Property="Foreground" Value="{StaticResource DateTimePrimaryBrush}"/>
			<Setter Property="FontSize" Value="{StaticResource FontSizeMedium}"/>
			<Setter Property="FontWeight" Value="Regular"/>
			<Setter Property="VerticalAlignment" Value="Center"/>
			<Setter Property="TextTrimming" Value="CharacterEllipsis"/>
		</Style>

		 <!--Status Badge Styles--> 
		<Style Selector="TextBlock.status-open">
			<Setter Property="Foreground" Value="{StaticResource DangerBrush}"/>
			<Setter Property="FontWeight" Value="SemiBold"/>
		</Style>

		<Style Selector="TextBlock.status-progress">
			<Setter Property="Foreground" Value="{StaticResource WarningBrush}"/>
			<Setter Property="FontWeight" Value="SemiBold"/>
		</Style>

		<Style Selector="TextBlock.status-resolved">
			<Setter Property="Foreground" Value="{StaticResource SuccessBrush}"/>
			<Setter Property="FontWeight" Value="SemiBold"/>
		</Style>

		<Style Selector="TextBlock.status-investigation">
			<Setter Property="Foreground" Value="{StaticResource InfoBrush}"/>
			<Setter Property="FontWeight" Value="SemiBold"/>
		</Style>

		 <!--Priority Badge Styles--> 
		<Style Selector="TextBlock.priority-low">
			<Setter Property="Foreground" Value="{StaticResource SuccessBrush}"/>
			<Setter Property="FontWeight" Value="SemiBold"/>
		</Style>

		<Style Selector="TextBlock.priority-medium">
			<Setter Property="Foreground" Value="{StaticResource WarningBrush}"/>
			<Setter Property="FontWeight" Value="SemiBold"/>
		</Style>

		<Style Selector="TextBlock.priority-high">
			<Setter Property="Foreground" Value="{StaticResource DangerBrush}"/>
			<Setter Property="FontWeight" Value="SemiBold"/>
		</Style>

		<Style Selector="TextBlock.priority-critical">
			<Setter Property="Foreground" Value="{StaticResource DangerDarkBrush}"/>
			<Setter Property="FontWeight" Value="Bold"/>
		</Style>

		 <!--Primary Button Style--> 
		<Style Selector="Button.primary-button">
			<Setter Property="Background" Value="{StaticResource PrimaryMediumBrush}"/>
			<Setter Property="Foreground" Value="{StaticResource TextLightBrush}"/>
			<Setter Property="BorderThickness" Value="{StaticResource BorderThicknessNone}"/>
			<Setter Property="CornerRadius" Value="{StaticResource CornerRadiusMedium}"/>
			<Setter Property="Padding" Value="{StaticResource PaddingButtonLarge}"/>
			<Setter Property="FontWeight" Value="SemiBold"/>
		</Style>

		<Style Selector="Button.primary-button:pointerover">
			<Setter Property="Background" Value="{StaticResource PrimaryLightBrush}"/>
		</Style>

		 <!--Secondary Button Style--> 
		<Style Selector="Button.secondary-button">
			<Setter Property="Background" Value="{StaticResource NeutralLightBrush}"/>
			<Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
			<Setter Property="BorderThickness" Value="{StaticResource BorderThicknessThin}"/>
			<Setter Property="BorderBrush" Value="{StaticResource NeutralGrayBrush}"/>
			<Setter Property="CornerRadius" Value="{StaticResource CornerRadiusMedium}"/>
			<Setter Property="Padding" Value="{StaticResource PaddingButtonLarge}"/>
			<Setter Property="FontWeight" Value="SemiBold"/>
		</Style>

		<Style Selector="Button.secondary-button:pointerover">
			<Setter Property="Background" Value="{StaticResource NeutralGrayBrush}"/>
			<Setter Property="Foreground" Value="{StaticResource TextLightBrush}"/>
		</Style>
	</rxui:ReactiveUserControl.Styles>

	<controls:DataTableControl HeaderText="{x:Static resources:TextResource.IncidentReportsTitle}"
                               DescriptionText="{x:Static resources:TextResource.IncidentReportsPageDescription}"
                               SearchWatermark="{x:Static resources:TextResource.IncidentReportsSearchPlaceholder}"
							   RowClickCommand="{Binding ViewDetailsCommand}"
                               SearchText="{Binding SearchText}"
                               ItemsSource="{Binding IncidentData}"
                               ResultSummary="{Binding ResultSummary}"
                               MaxHeight="400"
                               PageSize="10"
                               ShowPagination="True"
                               ShowPrimaryAction="True"
                               PrimaryActionText="{x:Static resources:TextResource.AddIncidentReportButtonText}"
                               PrimaryActionCommand="{Binding CreateNewIncidentCommand}">
		<controls:DataTableControl.Columns>
			<controls:DataTableColumn Header="{x:Static resources:TextResource.LabelIncidentId}"
									  Binding="Id"
									  Width="1.2*"
									  CellStyle="cell-text incident-id"/>
			<controls:DataTableColumn Header="{x:Static resources:TextResource.LabelIncidentHeader}"
									  Binding="Header"
									  Width="1.5*"
									  CellStyle="cell-text incident-type"/>
			<controls:DataTableColumn Header="{x:Static resources:TextResource.LabelIncidentDescription}"
									  Binding="Header"
									  Width="3*"
									  CellStyle="cell-text incident-description"/>
			<controls:DataTableColumn Header="{x:Static resources:TextResource.LabelReportedDate}"
									  Binding="FormattedReportedDate"
									  Width="1.5*"
									  CellStyle="cell-text incident-date"/>
			<!-- Updated to use localized priority -->
			<controls:DataTableColumn Header="{x:Static resources:TextResource.LabelIncidentPriority}"
									  Binding="LocalizedPriority"
									  Width="1*"
									  CellStyle="cell-text"/>
			<!-- Updated to use localized status -->
			<controls:DataTableColumn Header="{x:Static resources:TextResource.LabelStatus}"
									  Binding="LocalizedStatus"
									  Width="1.2*"
									  CellStyle="cell-text"/>
		</controls:DataTableControl.Columns>
	</controls:DataTableControl>
</rxui:ReactiveUserControl>